{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "outDir": "dist",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "sourceRoot": "/",
    "rootDirs": ["."],
    "types": ["node"],
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "paths": {
      "@root/*": ["./*"]
    }
  },
  "include": ["./src/**/*", "./scripts/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
